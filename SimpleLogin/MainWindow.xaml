<Window x:Class="SimpleLogin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleLogin"
        mc:Ignorable="d"
        Title="MainWindow" Height="228" Width="399">
    <Grid>
        <Label Content="User" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="20"/>
        <Label Content="Pass" HorizontalAlignment="Left" Margin="10,52,0,0" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="txtUserName" HorizontalAlignment="Left" Margin="72,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="245" FontSize="20" TextChanged="txtUserName_TextChanged"/>
        <TextBox x:Name="txtPassword" HorizontalAlignment="Left" Margin="72,56,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="245" FontSize="20" TextChanged="txtPassword_TextChanged"/>
        <Button x:Name="btnLogin" Content="Login" Margin="10,94,0,0" VerticalAlignment="Top" FontSize="20" HorizontalAlignment="Left" Width="307" Click="btnLogin_Click"/>
        <Label x:Name="lblMessage" Content="" HorizontalAlignment="Left" Margin="10,130,0,0" VerticalAlignment="Top" FontSize="20" Foreground="Red" Width="307"/>

    </Grid>
</Window>
